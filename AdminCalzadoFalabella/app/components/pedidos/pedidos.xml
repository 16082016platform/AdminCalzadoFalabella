<Page xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:widgets="utils/widgets" loaded="pageLoaded" id="pedidosScreen" cssClass="screen">
    <Page.actionBar>
        <widgets:action-bar />
    </Page.actionBar>

    <StackLayout>

        <GridLayout rows="auto, *">

            <ListView row="1" items="{{ listItems }}">
                <ListView.itemTemplate>
                    <StackLayout doubletap="onListViewItemTap" index="{{ index }}">
                        <GridLayout columns="auto,*,auto" cssClass="padded-label">

                            <StackLayout col="0" cssClass="padded-label-stack">
                                <Label id="{{'estado'+index}}" text="{{ header }}" cssClass="title-label" color="{{ color }}" textWrap="true" />
                            </StackLayout>

                            <StackLayout col="1" cssClass="padded-label-stack">
                                <Label text="{{ 'CÃ³digo: ' + details.productoExpand.codigo }}" cssClass="title-label" textWrap="true" />
                                <Label text="{{ details.productoExpand.nombre }}" style.fontSize="30" textWrap="true" />
                            </StackLayout>

                            <WrapLayout col="2" cssClass="padded-label-stack">
                                <Label text="{{ details.talla }}" cssClass="title-label" textWrap="true" />
                                <Button text="." margin="10" color="{{ '#'+details.color }}" backgroundColor="{{ '#'+details.color }}" cssClass="colorProducto" />
                                <Label text="{{ details.nombreColor }}" cssClass="title-label" textWrap="true" />
                            </WrapLayout>

                        </GridLayout>
                        <!-- additional view content -->
                    </StackLayout>
                </ListView.itemTemplate>
            </ListView>
            <ActivityIndicator row="1" busy="{{ isLoading }}" />


        </GridLayout>
        <!-- additional view content -->

        <!-- START_CUSTOM_CODE_pedidos -->
        <!-- Add custom code here. For more information about custom code, see http://docs.telerik.com/platform/screenbuilder/troubleshooting/how-to-keep-custom-code-changes -->

        <!-- END_CUSTOM_CODE_pedidos -->
    </StackLayout>
</Page>